@namespace Zdk.Client

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a id="brand-name" class="navbar-brand" href="">Zdk</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home nav-item-icon" aria-hidden="true"></span> <span class="navlink-text">Home</span>
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="ShoppingLists">
                <span class="oi oi-list-rich nav-item-icon" aria-hidden="true"></span> <span class="navlink-text">Shopping lists</span>
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="User">
                <span class="oi oi-cog nav-item-icon" aria-hidden="true"></span> <span class="navlink-text">User management</span>
            </NavLink>
        </div>
        <LoginDisplay />
    </nav>
</div>

<div class="bottom-row ps-3 navbar navbar-dark">
    <button id="navbar-toggler-lg" class="navbar-toggler navbar-toggler-lg" type="button" aria-label="Toggle navigation" onclick="toggleNav()">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

@code {
    private bool _collapseNavMenu = true;

    private string? NavMenuCssClass => _collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        _collapseNavMenu = !_collapseNavMenu;
    }
}
