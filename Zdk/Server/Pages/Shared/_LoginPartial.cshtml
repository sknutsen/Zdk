@using Microsoft.AspNetCore.Identity
@using Zdk.Utilities.Authentication.Data

@inject SignInManager<ZdkUser> SignInManager
@inject UserManager<ZdkUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="nav-item px-3">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            <span class="oi oi-person" aria-hidden="true"></span> @UserManager.GetUserName(User)!
        </a>
    </div>
    <div class="nav-item px-3">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <span class="oi oi-account-logout" aria-hidden="true"></span> <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </div>
}
else
{
    <div class="nav-item px-3">
        <a class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register">
            <span class="oi oi-key" aria-hidden="true"></span> <span class="navlink-text">Register</span>
        </a>
    </div>
    <div class="nav-item px-3">
        <a class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login">
            <span class="oi oi-account-login" aria-hidden="true"></span> <span class="navlink-text">Log in</span>
        </a>
    </div>
}
